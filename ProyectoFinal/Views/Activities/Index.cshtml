@model IEnumerable<ProyectoFinal.Models.Activity>
@using MvcContrib.UI.Pager
@using MvcContrib.Pagination;
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@Html.Raw(@Html.Pager((IPagination)Model)
                .Format("Mostrando {0}-{1} de {2} | ")
                .First("Primero")
                .Previous("Anterior")
                .Next("Siguiente")
                .Last("Último")
         )
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ActivityID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ActivityID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ActivityID })
        </td>
    </tr>
}

</table>
@Html.Raw(@Html.Pager((IPagination)Model)
                .Format("Mostrando {0}-{1} de {2} | ")
                .First("Primero")
                .Previous("Anterior")
                .Next("Siguiente")
                .Last("Último")
         )