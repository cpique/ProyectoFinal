<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Gimnasio Amos</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
</head>
<body>
    <div class="container body-content">

        @{
            ViewBag.Title = "Home Page";
            Layout = null;
        }

        @using (Html.BeginForm("Access", "Home", null, FormMethod.Post, null))
        {
            @Html.AntiForgeryToken()
            <div class="jumbotron">
                <h1>Gimnasio AMOS</h1>
                <p class="lead">Ingrese su número de documento para validar y registrar su ingreso al gimnasio.</p>
                <p><input class="form-control text-box single-line" type="text" name="docNumber" id="docNumber" placeholder="Ingrese documento" /></p>
                <p><input class="btn btn-primary btn-lg" type="submit" value="Ingresar" /> @Html.ValidationSummary(false, "", new { @class = "text-danger" })</p>
            </div>
        }

        @Html.Partial("AccessPartial")
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Gimnasio Amos. Gimnasio & Fitness</p>
        </footer>
    </div>
</body>
</html>
