@model PagedList.IPagedList<ProyectoFinal.Models.File>
@using PagedList.Mvc;
@using ProyectoFinal.Utils
@{
    ViewBag.Title = "Index";
}



<h2>Ejercicios</h2>
<p>
    @Html.ActionLink("Crea nuevo ejercicio", "Create", new { id = Model.FirstOrDefault().RoutineID })
</p>
<hr />
<div class="container">
    @using (Html.BeginForm("Index", "Files", FormMethod.Get, new { @class = "form-horizontal" }))
    {
        <div class="form-group">
            <label class="control-label col-xs-12 col-sm-3 col-md-4 col-lg-2" for="email">Buscar por ejercicio:</label>
            <div class="col-xs-6 col-sm-3 col-md-4 col-lg-3">
                @Html.TextBox("SearchString", ViewBag.CurrentFilter as string, new { @class = "form-control text-box single-line" })
            </div>
            <div class="col-xs-6 col-sm-6 col-md-4 col-lg-4">
                <input type="submit" class="btn btn-default" value="Buscar" />
            </div>
        </div>
    }
</div>

<div class="table-responsive">
    <table class="table table-striped">
        <tr class="success">
            <th>
                @Html.ActionLink(@Html.DisplayNameFor(model => model.FirstOrDefault().Routine.NameFile).ToHtmlString(),
                                                      "Index",
                                                      new { sortOrder = ViewBag.RoutineNameSortParm, currentFilter = ViewBag.CurrentFilter }) <span class="glyphicon glyphicon-sort"></span>
            </th>
            <th>
                @Html.ActionLink("Día",
                                 "Index",
                                 new { sortOrder = ViewBag.DayParm, currentFilter = ViewBag.CurrentFilter }) <span class="glyphicon glyphicon-sort"></span>
            </th>
            <th>
                @Html.ActionLink("Músculo",
                                 "Index",
                                 new { sortOrder = ViewBag.MuscleSortParm, currentFilter = ViewBag.CurrentFilter }) <span class="glyphicon glyphicon-sort"></span>
            </th>
            <th>
                @Html.ActionLink(@Html.DisplayNameFor(model => model.FirstOrDefault().ExerciseName).ToHtmlString(),
                                                      "Index",
                                                      new { sortOrder = ViewBag.ExerciseSortParm, currentFilter = ViewBag.CurrentFilter }) <span class="glyphicon glyphicon-sort"></span>
            </th>
            <th>
                @Html.ActionLink(@Html.DisplayNameFor(model => model.FirstOrDefault().Peso).ToHtmlString(),
                                                      "Index",
                                                      new { sortOrder = ViewBag.PesoSortParm, currentFilter = ViewBag.CurrentFilter }) <span class="glyphicon glyphicon-sort"></span>
            </th>
            <th>
                @Html.ActionLink(@Html.DisplayNameFor(model => model.FirstOrDefault().Repetitions).ToHtmlString(),
                                                      "Index",
                                                      new { sortOrder = ViewBag.Repetitions, currentFilter = ViewBag.CurrentFilter }) <span class="glyphicon glyphicon-sort"></span>
            </th>
            <th>Acciones</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Routine.NameFile)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Day)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MuscleName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ExerciseName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Peso)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Repetitions)
                </td>
                <td>
                    <a href="@Url.Action("Details", "Files", new { id = item.FileID })" class="btn btn-primary btn-sm" title="Detalles">
                        <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
                    </a>
                    <a href="@Url.Action("Edit", "Files", new { id = item.FileID })" class="btn btn-warning btn-sm" title="Editar">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                    </a>
                    <a href="@Url.Action("Delete", "Files", new { id = item.FileID })" class="btn btn-danger btn-sm" title="Borrar">
                        <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                    </a>
                </td>
            </tr>
        }

    </table>
</div>
Página @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) de @Model.PageCount

@Html.PagedListPager(Model, page => Url.Action("Index",
    new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
