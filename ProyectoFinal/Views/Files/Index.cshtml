@model IEnumerable<ProyectoFinal.Models.File>
@using MvcContrib.UI.Pager
@using MvcContrib.Pagination;
@{
    ViewBag.Title = "Index";
}



<h2>Index</h2>
<p>
    @Html.ActionLink("Create New", "Create", new { id = Model.FirstOrDefault().RoutineID })
</p>
@Html.Raw(@Html.Pager((IPagination)Model)
                .Format("Mostrando {0}-{1} de {2} | ")
                .First("Primero")
                .Previous("Anterior")
                .Next("Siguiente")
                .Last("Último")
         )
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Routine.NameFile)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MuscleName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ExerciseName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Peso)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Repetitions)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Day)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Routine.NameFile)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MuscleName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ExerciseName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Peso)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Repetitions)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Day)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.FileID }) |
            @Html.ActionLink("Details", "Details", new { id=item.FileID }) |
            @Html.ActionLink("Ver más", "IndexPDF", new { id = item.RoutineID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.FileID })
        </td>
    </tr>
}

</table>
@Html.Raw(@Html.Pager((IPagination)Model)
                .Format("Mostrando {0}-{1} de {2} | ")
                .First("Primero")
                .Previous("Anterior")
                .Next("Siguiente")
                .Last("Último")
         )
<br />
@Html.ActionLink("Preview", "IndexPDF", new { id = Model.FirstOrDefault().RoutineID })
